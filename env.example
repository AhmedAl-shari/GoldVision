# Database Configuration
DATABASE_URL=postgresql://goldvision:changeme@localhost:5432/goldvision

# External Price API Configuration
PRICE_API_BASE_URL=https://api.metals.live/v1/spot/gold
METALS_API_KEY=your-metals-api-key-here
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here
GOLDAPI_KEY=your-goldapi-key-here
COMMODITIES_API_KEY=your-commodities-api-key-here
TWELVE_DATA_API_KEY=your-twelve-data-api-key-here
FETCH_INTERVAL_MIN=60
MAX_RETRIES=3
BACKOFF_BASE_MS=250

# Forecasting Configuration
FORECAST_HORIZON_DAYS=30
CACHE_TTL_SECONDS=3600

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:5173,https://yourdomain.com

# Production Configuration
PROD_ORIGIN=https://yourdomain.com

# Prophet Service (if using separate microservice)
PROPHET_SERVICE_URL=http://localhost:8001

# USD to YER Exchange Rate (fallback if API fails)
USD_YER_RATE=530

# News Configuration - Dynamic Data Sources
NEWS_PROVIDER=rss
NEWS_API_KEY=your_marketaux_api_key_here
NEWS_POLL_SEC=60

# Alternative news providers (uncomment to use)
# NEWS_PROVIDER=marketaux  # Requires API key
# NEWS_PROVIDER=rss        # Free RSS feeds (recommended for production)
# NEWS_PROVIDER=disabled   # Disable news entirely

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com
