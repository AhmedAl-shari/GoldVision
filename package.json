{
  "name": "goldvision-root",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "postinstall": "npm -C frontend install",
    "dev": "npm -C frontend run dev",
    "build": "npm -C frontend run build",
    "test": "npm -C frontend run test",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "lint": "npm -C frontend run lint",
    "format": "echo 'Use frontend lint rules; Prettier optional'",
    "dev:front": "npm -C frontend run dev",
    "dev:api": "node express-backend-enhanced.js",
    "dev:prophet": "cd prophet-service && python3 -m uvicorn main:app --host 0.0.0.0 --port 8001",
    "dev:all": "concurrently -n front,api,prophet -c auto \"npm run dev:front\" \"npm run dev:api\" \"npm run dev:prophet\"",
    "dev:ready": "wait-on http://127.0.0.1:5173 && curl -fsS http://127.0.0.1:5173 | head -5",
    "test:accessibility": "node test_accessibility.js",
    "test:security": "node test_security.js",
    "synthetic:check": "tsx scripts/synthetic_check.ts",
    "test:compliance": "node test_compliance.js",
    "test:all": "npm run test:compliance",
    "test:security:suite": "node tests/security/run-security-tests.js",
    "test:security:chaos": "node tests/security/chaos-test-suite.js",
    "test:security:rate-limits": "node tests/security/security-test-suite.js",
    "evidence": "python3 scripts/collect_evidence.py",
    "perf": "node scripts/performance-test.js --requests 50 --output artifacts/perf_summary.txt",
    "perf:evidence": "node scripts/performance-evidence.js",
    "generate-vapid": "node scripts/generate-vapid.js",
    "gen:api-types": "openapi-typescript http://localhost:8000/openapi.json -o frontend/src/lib/api-types.ts",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "node scripts/seed-database.js",
    "db:seed:shops": "node scripts/seed-shops.js",
    "db:import:shops": "node scripts/import-shops.js",
    "rag:ingest": "ts-node backend/rag/ingest.ts",
    "copilot:health": "curl -s localhost:8000/copilot/health | jq",
    "copilot:dev": "ts-node backend/copilot/backend.ts",
    "copilot:eval": "ts-node copilot/eval/run.ts copilot/eval/copilot_eval.yaml",
    "copilot:eval:debug": "ts-node copilot/eval/run.ts copilot/eval/copilot_eval.yaml --debug",
    "copilot:eval:ci": "npm run copilot:eval && node -e \"const results = require('./artifacts/chat/eval_results.json'); const s = results.summary; const pass = s.overall_pass_rate >= 0.85 && s.safety_scores.advice_safety_rate >= 1.0 && s.safety_scores.docs_citation_rate >= 0.8; console.log(pass ? 'CI Gate: PASSED' : 'CI Gate: FAILED'); process.exit(pass ? 0 : 1);\"",
    "version:rc": "node scripts/version-rc.js",
    "changelog": "node scripts/generate-changelog.js",
    "test:full": "npm run test && npm run test:accessibility && npm run test:security && npm run test:compliance && npm run test:lighthouse && npm run test:qa",
    "test:qa": "npm -C frontend run test:qa:ci",
    "release": "node scripts/release-v1.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.17",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "license-checker": "^25.0.1",
    "lighthouse": "^12.0.0",
    "nock": "^14.0.10",
    "openapi-typescript": "^7.9.1",
    "prisma": "^6.16.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "wait-on": "^8.0.1",
    "xmldom": "^0.6.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@types/js-yaml": "^4.0.9",
    "apicache": "^1.6.3",
    "archiver": "^7.0.1",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "ics": "^3.8.1",
    "ioredis": "^5.8.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "natural": "^8.1.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.10",
    "opossum": "^9.0.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^15.1.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "rss-parser": "^3.13.0",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "unified": "^11.0.0",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7",
    "xss": "^1.0.15",
    "zod": "^3.25.76"
  },
  "version": "1.0.0"
}
